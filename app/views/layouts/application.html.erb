<!DOCTYPE html>
<html>
  <head>
    <title>hack_app</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag "//cloud.typography.com/7222252/625882/css/fonts.css", media: "all" %>
    <%= stylesheet_link_tag "main", media: "all" %>
    <%= stylesheet_link_tag "admin", media: "all" if admin_namespace? %>
    <%= yield :styles %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-44872904-1', 'hackapp.co');
      ga('send', 'pageview');
    </script>
  </head>
  <body class="<%= "admin " if admin_namespace? %><%= controller_name %> <%= action_name %>">
    <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: "flash #{name}" %>
    <% end -%>
    <div class="site-wrap">
      <header class="site-header <%= yield :header_class %>">
        <div class="gut group">
          <%= link_to image_tag("data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"), home_path, class: "site-logo" %>
          <div class="site-nav--primary">
            <%= render "shared/nav/main" %>
          </div>
          <div class="site-nav--secondary group">
            <%= render "shared/nav/membership" %>
          </div>
        </div>
      </header>
      <% if admin_namespace? %>
      <%= render "admin/shared/menu" %>
      <% end %>
      <section class="site-content">
        <%= yield %>
      </section>
    </div>
    <% unless admin_namespace? %>
    <%= render "shared/footer" %>
    <% end %>
    <%= javascript_include_tag "main" %>
    <%= javascript_include_tag "admin" if admin_namespace? %>
    <%= yield :scripts %>
  </body>
</html>
