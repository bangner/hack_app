<h1>Schools</h1>

<ul>
  <li>
    <a href="<%= new_admin_school_path %>">New</a>
  </li>
</ul>

<table>

  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Admins</th>
  </tr>
 
  <% @schools.each do |school| %>
  <tr>
    <td><%= school.id %></td>
    <td><%= school.name %></td>
    <td><%= school.accounts.pluck(:name) %></td>
  </tr>
  <% end %>

</table>