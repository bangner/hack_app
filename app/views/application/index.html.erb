<% content_for :header_class do %>see-through on-dark<% end %>

<section class="hero hero--home hero--dark">
  <div class="gut middle--outer">
    <div class="middle--inner">
      <h1>A better way to bootcamp</h1>
      <h2>Research coding bootcamps. Apply with one profile.</h2>
      <a href="<%= schools_path %>" class="schools btn--clear">View Schools</a>
      <a href="<%= new_applicant_path %>" class="apply btn--green">Start Application</a>
    </div>
  </div>
</section>
<section class="content-piece lead-in--delta lead-in--home">
  <div class="gut">
    <h2>
      We are on a mission to elevate the bootcamp scene.
      <br />
      Some other longish text that says something really awesome.
    </h2>
  </div>
</section>
<section class="content-piece--margin lead-in--clear">
  <div class="gut">
    <h1>Latest Bootcamps</h1>
    <h2>We have an ever-growing list of coding bootcamps. <a href="<%= schools_path %>">See all</a>.</h2>
  </div>
</section>
<section class="content-piece--margin">
  <div class="gut">
    <ul class="school-card-list school-card-list--four list--layout group">
      <%= render partial: "schools/card", collection: @latest_schools %>
    </ul>
  </div>
</section>

<% content_for :scripts do %>
<script>
var cardUpdatePath = "<%= applicant_application_path(current_account) %>";
</script>
<%= javascript_include_tag "card" if role_signed_in? Role::APPLICANT %>
<% end %>