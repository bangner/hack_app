<h1>School Directory</h1>
 
<table>

  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Admin</th>
    <th>Email</th>
    <th>Stripe Customer ID</th>
  </tr>
 
  <% @schools.each do |school| %>
  <tr>
    <td><%= school.id %></td>
    <td>
      <a href="<%= school_path(school.id) %>"><%= school.name %></a>
    </td>
    <td><%= school.accounts.first.name %></td>
    <td><%= school.accounts.first.email %></td>
    <td><%= school.stripe_customer_id %></td>
  </tr>
  <% end %>

</table>